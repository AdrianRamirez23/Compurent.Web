@model IEnumerable<Compurent.Web.Models.PurchaseDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Pedidos</h2>

<p>
    @Html.ActionLink("Crear un nuevo Pedido", "CrearPedido")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Album_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Album_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
}

</table>
