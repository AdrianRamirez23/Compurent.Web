@model IEnumerable<Compurent.Web.Models.Album>

@{
    ViewBag.Title = "ListarAlbum";
}
@foreach (var flash in Request.GetFlashMessages())
{
    <div class="alert alert-@flash.Type">@flash.Message</div>
}

<h2>Lista de Albumnes</h2>

<p>
    @Html.ActionLink("Crear Nuevo Álbum", "AgregarAlbum")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Editar Álbum", "EditarAlbum", new { id = item.id }) |
                @Html.ActionLink("Eliminar Álbum", "EliminarAlbum", new { id = item.id })
            </td>
        </tr>
    }

</table>
