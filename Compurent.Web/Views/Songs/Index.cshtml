@model IEnumerable<Compurent.Web.Models.Songs>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Canciones</h2>

<p>
    @Html.ActionLink("Crear Nueva Canción", "AgregarCancion")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Album_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Album_id)
    </td>
    <td>
        @Html.ActionLink("Editar Canción", "EditarCancion", new { id = item.id }) |
        @Html.ActionLink("Eliminar Canción", "EliminarCancion", new { id = item.id })
    </td>
</tr>
}

</table>
